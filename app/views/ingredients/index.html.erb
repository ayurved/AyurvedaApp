<div id="header"><h1>Ingredients</h1></div>
<div id="wrapper">

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Temperature</th>
      <th>Preflavor</th>
      <th>Postflavor</th>
      <th>Property</th>
      <th>Dosha action</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.Name %></td>
        <td><%= ingredient.Type %></td>
        <td><%= ingredient.Temperature %></td>
        <td><%= ingredient.PreFlavor %></td>
        <td><%= ingredient.PostFlavor %></td>
        <td><%= ingredient.Property %></td>
        <td><%= ingredient.Dosha_Action %></td>
        <td><%= link_to 'Show', ingredient %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient', new_ingredient_path %>
</div>