<div id="header"><h1>Ingredients</h1></div>
<div id="wrapper">
<%= form_for(@ingredient) do |f| %>
  <% if @ingredient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ingredient.errors.count, "error") %> prohibited this ingredient from being saved:</h2>

      <ul>
      <% @ingredient.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Name %><br>
    <%= f.text_field :Name %>
  </div>
  <div class="field">
    <%= f.label :FoodGroup %><br>
    <%= f.collection_select( :food_group_id,
      FoodGroup.all,
      :id, :Name, {selected: @ingredient.food_group_id, include_blank:false}, {multiple: false}) %>
  </div>
  <div class="field">
    <%= f.label :Temperature %><br>
    <%= f.collection_select( :temperature_id,
      Temperature.all,
      :id, :Type, {selected: @ingredient.temperature_id, include_blank: false}, {multiple: false}) %>
  </div>
  <div class="field">
    <%= f.label :PreFlavors %><br>
    <%= f.collection_select( :pre_flavor_ids,
      Flavor.all,
      :id, :name, {selected: @ingredient.pre_flavor_ids, include_blank: false}, {multiple: true}) %>
  </div>
  <div class="field">
    <%= f.label :PostFlavors %><br>
    <%= f.collection_select( :post_flavor_ids,
      Flavor.all,
      :id, :name, {selected: @ingredient.post_flavor_ids, include_blank: false}, {multiple: true}) %>
  </div>
  <div class="field">
    <%= f.label :Properties %><br>
    <%= f.collection_select( :property_ids, 
      Property.all, 
      :id, :Name, {selected: @ingredient.property_ids, include_blank: false}, {multiple: true}) %>
  </div>
  <div class="field">
    <%= f.label :Dosha_Action %><br>
    <%= f.collection_select( :dosha_action_ids,
      DoshaAction.all,
      :id, :Dosha, {selected: @ingredient.dosha_action_ids, include_blank: false}, {multiple: true}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
